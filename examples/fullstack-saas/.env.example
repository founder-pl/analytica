# ANALYTICA Full-Stack SaaS - Environment Variables
# =================================================
# Copy this file to .env and fill in your values

# ===========================================
# GENERAL
# ===========================================
APP_NAME=Analytica SaaS
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:3000

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/analytica
DATABASE_POOL_SIZE=20

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRATION=86400
SESSION_LIFETIME=604800

# ===========================================
# BILLING (Stripe)
# ===========================================
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Plan Price IDs
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ===========================================
# EMAIL (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG....
EMAIL_FROM=noreply@analytica.io
EMAIL_FROM_NAME=Analytica

# ===========================================
# MONITORING
# ===========================================
GRAFANA_PASSWORD=admin
SENTRY_DSN=
DATADOG_API_KEY=

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_SIGNUP=true
ENABLE_OAUTH=true
ENABLE_2FA=true
ENABLE_BILLING=true

# ===========================================
# OAUTH (optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# STORAGE (optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=eu-central-1
