# ANALYTICA Desktop Electron - Environment Variables
# ==================================================
# Copy this file to .env and fill in your values

# API Configuration
ANALYTICA_API_URL=http://localhost:18000
ANALYTICA_API_KEY=your-api-key-here

# Database (optional - for local SQLite)
DATABASE_PATH=./data/analytica.db

# Logging
LOG_LEVEL=info
DEBUG=false

# Auto-update
AUTO_UPDATE_ENABLED=true
UPDATE_SERVER_URL=https://releases.analytica.io

# Window settings
WINDOW_WIDTH=1400
WINDOW_HEIGHT=900

# Feature flags
ENABLE_NOTIFICATIONS=true
ENABLE_TRAY_ICON=true
