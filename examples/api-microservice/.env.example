# ANALYTICA API Microservice - Environment Variables
# ==================================================
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/analytica
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Feature flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# External Services (optional)
SENTRY_DSN=
DATADOG_API_KEY=
