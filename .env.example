# ============================================================
# ANALYTICA FRAMEWORK - Environment Configuration
# ============================================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env

# ============================================================
# API SERVER
# ============================================================
# Main API server port
API_PORT=18000

# Host to bind to (0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# Base URL for API (used in generated configs)
API_BASE_URL=http://localhost:18000

# ============================================================
# DOMAIN & BRANDING
# ============================================================
# Primary domain for the application
ANALYTICA_DOMAIN=repox.pl

# Application name
ANALYTICA_APP_NAME=Analytica

# ============================================================
# SECURITY
# ============================================================
# Secret key for JWT tokens (CHANGE IN PRODUCTION!)
ANALYTICA_SECRET_KEY=analytica-secret-key-change-in-production

# Token expiration in hours
ANALYTICA_TOKEN_EXPIRE_HOURS=24

# CORS allowed origins (comma-separated)
ANALYTICA_CORS_ORIGINS=http://localhost:18000,http://localhost:3000,http://127.0.0.1:18000

# ============================================================
# DATABASE
# ============================================================
# PostgreSQL connection
DATABASE_URL=postgresql://analytica:analytica@localhost:5432/analytica

# Redis connection (for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# ============================================================
# URI LAUNCHER (Custom URI Scheme)
# ============================================================
# Default URI scheme name
URI_SCHEME=analytica

# Default URL for desktop apps
DESKTOP_DEFAULT_URL=http://localhost:18000

# ============================================================
# DEPLOYMENT DEFAULTS
# ============================================================
# Docker registry
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_PREFIX=analytica

# Kubernetes namespace
K8S_NAMESPACE=analytica
K8S_REPLICAS=3

# ============================================================
# EXTERNAL SERVICES
# ============================================================
# KSeF (Polish e-invoicing)
KSEF_API_URL=https://ksef-test.mf.gov.pl/api
KSEF_ENV=test

# e-DorÄ™czenia (Polish e-delivery)
EDORECZENIA_API_URL=https://test.edoreczenia.gov.pl/api
EDORECZENIA_ENV=test

# ============================================================
# LOGGING
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=text

# ============================================================
# DEVELOPMENT
# ============================================================
# Enable debug mode (never in production!)
DEBUG=false

# Enable hot reload
HOT_RELOAD=true

# Enable CORS for all origins (development only!)
DEV_CORS_ALL=false
